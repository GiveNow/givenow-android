<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation_profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000" />

    <TextView
        android:id="@+id/navigation_label_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_label_phone"
        android:layout_alignLeft="@+id/navigation_profile_image"
        android:layout_alignStart="@+id/navigation_profile_image"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="@string/anonymous_user_name"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navigation_label_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navigation_label_username"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/navigation_label_username"
        android:layout_marginBottom="8dp"
        android:gravity="left"
        android:text=""
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>