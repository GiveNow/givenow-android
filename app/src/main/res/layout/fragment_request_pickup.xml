<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.onewarmcoat.onewarmcoat.app.fragments.main.donate.RequestPickupFragment">

    <LinearLayout
        android:id="@+id/llAddress"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/llConfirmInfo"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/appbar_elevation"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAddress"
            android:layout_width="@dimen/icon_size"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="0"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_location_on_white_24dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="Address"
            android:imeOptions="actionNext"
            android:inputType="textPostalAddress"
            android:text="Anklamer StraÃŸe 33"
            android:textColor="@color/white"
            android:textColorHint="@color/colorPrimaryDark"
            android:theme="@style/MyEditTextTheme" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flMapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSetPickup"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llAddress"
        android:layout_marginLeft="0dp">

        <FrameLayout
            android:id="@+id/flMapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical">

        </FrameLayout>

        <!--<EditText-->
        <!--android:id="@+id/etAddress"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="top"-->
        <!--android:hint="Address"-->
        <!--android:inputType="textPostalAddress"-->
        <!--android:minHeight="56dp"-->
        <!--android:padding="15dp"-->
        <!--android:textColor="@color/accent"-->
        <!--android:textSize="14sp" />-->

        <ImageView
            android:id="@+id/btnMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_marker" />

    </FrameLayout>

    <Button
        android:id="@+id/btnSetPickup"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorAccent"
        android:elevation="@dimen/button_elevation"
        android:text="@string/set_pickup_location_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffffff" />

</RelativeLayout>
